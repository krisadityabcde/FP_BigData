# Environment Configuration for Big Data System
# Copy this file to .env and fill in your actual values

# Kaggle API Credentials (Required)
# Get these from https://www.kaggle.com/settings/account
KAGGLE_USERNAME=your_kaggle_username_here
KAGGLE_KEY=your_kaggle_key_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC=hospital-data
KAFKA_GROUP_ID=hospital-data-consumer

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# DuckDB Service Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Service Ports (change if needed to avoid conflicts)
KAFKA_UI_PORT=8080
MINIO_CONSOLE_PORT=9090
DUCKDB_API_PORT=8002
STREAMLIT_PORT=8501

# Optional: Data Processing Settings
BATCH_SIZE=1000
PROCESSING_INTERVAL=30
